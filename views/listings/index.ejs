<% layout('layouts/boilerplate') -%>
<style>
    #filters{
        display: flex;
        flex-wrap: wrap;
        align-items: center;
    }
    .filter{
        text-align: center;
        margin: 0.3rem 1.3rem;
        opacity: 0.8;
    }
    .filter div i{
        transition: opacity 0.3s ease, scale 0.2s ease;
    }
    .filter div i:hover{
        scale: 1.5;
    }
    .filter:hover{
        opacity: 1;
    }
    .filter p{
        font-size: small;
    }
    .tax-toggle{
        border: 1px solid grey;
        border-radius: 10px;
        display: flex;
        justify-content: center;
        align-items: center;
        height: 3.5rem;
        width: 15rem;
        margin-left: 11rem;
    }
    .gst{
        display: none;
    }
</style>

<body>
    <div id="filters">
        <div class="filter">
            <div><i class="fa-solid fa-fire"></i></div>
            <p>Trending</p>
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-bed"></i></div>
            <p>Rooms</p>
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-tree-city"></i></div>
            <p>Iconic Cities</p>
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-umbrella-beach"></i></div>
            <p>Beech</p>
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-water"></i></div>
            <p>Surfing</p>
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-house"></i></div>
            <p>Farm</p>
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-satellite"></i></div>
            <p>OMG!</p>
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-igloo"></i></div>
            <p>Arctic</p>
        </div>

        <div class="tax-toggle">
            <div class="form-check form-switch form-check-reverse">
                <input class="form-check-input" type="checkbox" id="switchCheckReverse">
                <label class="form-check-label" for="switchCheckReverse">Display total after taxes</label>
            </div>
        </div>
    </div>
    
    <div class="row row-cols-lg-4 row-cols-md-3 row-cols-sm-1">
        <% for(list of lists) { %>
            <a href="/lists/<%= list._id %>" class="each-list">
                <div class="card col" >
                    <div class="card-img" style="aspect-ratio: 4 / 3; overflow: hidden;">
                        <img src="<%= list.image.url %>" class="card-img-top w-100 h-100" style="object-fit: cover;" alt="listing image">
                    </div>

                    <div class="card-body">
                        <!-- hover effect, bootstrap class  -->
                        <div class="card-img-overlay"></div>

                        <p class="card-text"><b><%= list.title %></b></p>
                        <p class="card-text">&#8377; <%= list.price.toLocaleString("en-IN") %>/night <i class="gst">&nbsp;&nbsp;&nbsp;&nbsp;+18% GST</i></p>

                    </div>                    
                </div>
            </a>
        <% } %>
    </div>

    <script>
        let taxSwitch = document.getElementById("switchCheckReverse");
        taxSwitch.addEventListener("click", ()=>{
            let gstPrice = document.getElementsByClassName("gst");
            for(gst of gstPrice){
                if(gst.style.display != "inline")
                    gst.style.display = "inline";
                else
                    gst.style.display = "none";
            }    
        });
    </script>
</body>
</html>